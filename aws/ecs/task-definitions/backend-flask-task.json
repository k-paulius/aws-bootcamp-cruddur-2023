{
  "family": "backend-flask",
  "executionRoleArn": "arn:aws:iam::123456789012:role/CruddurServiceExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/CruddurTaskRole",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": [ 
    "FARGATE" 
  ],
  "containerDefinitions": [
    {
      "name": "backend-flask",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/backend-flask",
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python /usr/app/venv/bin/flask/health-check"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "portMappings": [
        {
          "name": "backend-flask",
          "containerPort": 4567,
          "protocol": "tcp", 
          "appProtocol": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/cruddur/fargate-cluster",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "backend-flask"
        }
      },
      "environment": [
        {"name": "OTEL_SERVICE_NAME",           "value": "backend-flask"},
        {"name": "OTEL_EXPORTER_OTLP_ENDPOINT", "value": "https://api.honeycomb.io"},
        {"name": "AWS_DEFAULT_REGION",          "value": "us-east-1"}
      ],
      "secrets": [
        {"name": "FRONTEND_URL",                    "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/FRONTEND_URL"},
        {"name": "BACKEND_URL",                     "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/BACKEND_URL"},
        {"name": "AWS_ACCESS_KEY_ID",               "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/AWS_ACCESS_KEY_ID"},
        {"name": "AWS_SECRET_ACCESS_KEY",           "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/AWS_SECRET_ACCESS_KEY"},
        {"name": "CONNECTION_URL",                  "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/CONNECTION_URL" },
        {"name": "ROLLBAR_ACCESS_TOKEN",            "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/ROLLBAR_ACCESS_TOKEN" },
        {"name": "OTEL_EXPORTER_OTLP_HEADERS",      "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/OTEL_EXPORTER_OTLP_HEADERS" },
        {"name": "AWS_COGNITO_USER_POOL_ID",        "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/AWS_COGNITO_USER_POOL_ID" },
        {"name": "AWS_COGNITO_USER_POOL_CLIENT_ID", "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/cruddur/backend-flask/AWS_COGNITO_USER_POOL_CLIENT_ID" }
      ]
    }
  ]
}